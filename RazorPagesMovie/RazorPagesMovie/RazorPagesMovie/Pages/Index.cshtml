                        <div class="flex-1">
                            <div class="relative">
                                <form id="UsersSearchForm" class="flex">
                                    <button type="button" class="bg-blue-500 text-white px-3 py-1.5 rounded-l">
                                        <span class="fas fa-search" aria-hidden="true"></span>
